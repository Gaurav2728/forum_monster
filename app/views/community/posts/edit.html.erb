<div class="module">
  <div class="module_header">Edit Post</div>
    <div class="module_subheader smaller"></div>
    <div class="module_body">
      <%= form_for @post, :url => forum_topic_post_path(@forum, @topic) do |f| %>
      <div class="fieldset">
        <span class="label indent smaller">
          <%= f.label :body %><br />
          <small>(Required)</small>
        </span>
        <span class="input indent smaller"><%= f.text_area :body, :cols => 60, :rows => 15 %></span>
        <div class="clear"></div>
      </div>
    </div>
    <div class="module_footer">
      <div class="fieldset">
        <span class="input"><%= f.submit "submit" %></span>
        <div class="clear"></div>
      </div>
    </div>
    <% end %>
  </div>
</div>