<div class="right controls"><%= link_to "Back to Forum List", categories_path %></div>
<div class="module">
  <div class="module_header">
    <%= forum.title %>
    <span class="controls right">
      <%= link_to "New Topic", new_topic_path(:forum_id => forum.id) %>
      <%= link_to "Edit Forum", edit_forum_path(forum) %>
      <%= link_to "Delete Forum", forum_path(forum), :confirm => "Are you sure you want to delete this forum?", :method => :delete %>
    </span>
  </div>
  <div>
    <table>
      <tr class="smaller">
        <th colspan="2" align="left">Topic</th>
        <th>Replies</th>
        <th>Views</th>
        <th class="last_post" align="left">Latest Post</th>
      </tr>
			<%= render forum.topic_list %>
    </table>
  </div>
</div>